<%- include("header") %>
<div class="container">
  <h1>Cart</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>Quantity</th>
        <th>Unit Price</th>
        <th>Total Price</th>
      </tr>
    </thead>
    <tbody>
      <% cart.forEach(item => { %>
        <tr>
          <td><%= item.name %></td>
          <td><%= item.quantity %></td>
          <td><%= item.unitPrice %></td>
          <td><%= item.totalPrice %></td>
        </tr>
      <% }); %>
    </tbody>
    <tfoot>
      <tr>
        <td colspan="3" class="text-right">Total Bill:</td>
        <td><%= calculateTotalBill(cart) %></td>
      </tr>
    </tfoot>
  </table>
</div>
<%- include("footer") %>
